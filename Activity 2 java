public class Employee {
    private String name;
    private int employeeID;
    private double salary;

    // Constructor to initialize the attributes
    public Employee(String name, int employeeID, double salary) {
        this.name = name;
        this.employeeID = employeeID;
        this.salary = salary;
    }

    // Method to get the name
    public String getName() {
        return name;
    }

    // Method to set the name
    public void setName(String name) {
        this.name = name;
    }

    // Method to get the employee ID
    public int getEmployeeID() {
        return employeeID;
    }

    // Method to set the employee ID
    public void setEmployeeID(int employeeID) {
        this.employeeID = employeeID;
    }

    // Method to get the salary
    public double getSalary() {
        return salary;
    }


    // Method to set the salary
    public void setSalary(double salary) {
        this.salary = salary;
    }

    // Method to display the employee details
    public void displayEmployeeDetails() {
        System.out.println("Name: " + name);
        System.out.println("Employee ID: " + employeeID);
        System.out.println("Salary: " + salary);
    }

    public static void main(String[] args) {
        // Create an Employee object
        Employee employee = new Employee("sanjana",123,50000);

        // Access the members of the Employee object
        System.out.println("Initial Employee Details:");
        employee.displayEmployeeDetails();

        // Modify the attributes using the setter methods
        employee.setName("phani");
        employee.setEmployeeID(690);
        employee.setSalary(55000);

        // Display the updated employee details
        System.out.println("\nUpdated Employee Details:");
        employee.displayEmployeeDetails();
    }
}
